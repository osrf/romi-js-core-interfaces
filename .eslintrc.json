{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": "error",
    "prefer-const": "warn",
    "max-len": ["warn", { "code": 100 }],
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/camelcase": "off", // generated files may not contain camelCase
    "@typescript-eslint/class-name-casing": "off" // generated files may not contain PascalCase
  },
  "overrides": [
    {
      "files": "./lib/romi-msgs/**",
      "rules": {
        "@typescript-eslint/no-empty-interface": "off"
      }
    }
  ]
}